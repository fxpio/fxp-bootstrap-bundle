<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonatra_bootstrap.type_extension.table_doctrine_orm" class="Sonatra\Component\Bootstrap\Block\Extension\TableDoctrineOrmExtension" public="true">
            <tag name="sonatra_block.type_extension" extended-type="Sonatra\Component\Bootstrap\Block\Type\TableType" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>
